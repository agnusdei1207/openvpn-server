port {{PORT}}
proto {{PROTO}}
dev tun

ca ca.crt
cert server.crt
key server.key
dh dh.pem

server {{NETWORK}} {{NETMASK}}
ifconfig-pool-persist ipp.txt

push "redirect-gateway def1 bypass-dns"
push "dhcp-option DNS 8.8.8.8"
push "dhcp-option DNS 8.8.4.4"

client-to-client
client-config-dir ccd

keepalive 10 120
cipher AES-256-CBC
user nobody
group nogroup
persist-key
persist-tun

crl-verify crl.pem

status openvpn-status.log
verb 3
explicit-exit-notify 1

tls-auth ta.key 0
key-direction 0
